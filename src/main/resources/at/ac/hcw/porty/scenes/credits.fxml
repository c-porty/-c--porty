<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="960.0" prefWidth="1184.0" styleClass="porty-content-pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.porty.controller.CreditsController">
    <HBox prefHeight="50.0" prefWidth="1184.0">
        <ToggleButton fx:id="simplicityModeSwitch" mnemonicParsing="false" styleClass="porty-switch-text" text="Simple/Advanced" />
        <Region styleClass="porty-top-bar-spacer" HBox.hgrow="ALWAYS" />
        <ToggleButton fx:id="lightModeSwitch" mnemonicParsing="false" styleClass="porty-switch-icon" text="Theme" />
        <Button fx:id="languageButton" mnemonicParsing="false" styleClass="porty-top-bar-button" text="EN" />
    </HBox>
    <VBox styleClass="porty-credits">
        <VBox>
        <Label styleClass="porty-title-large" text="About Us" />
        <Label styleClass="porty-credits-subtitle" text="We can't C#" />
        </VBox>
        <Region fx:id="bar" prefHeight="8" prefWidth="1024" styleClass="porty-credits-bar" />
        <HBox>
            <TextArea fx:id="credits" editable="false" prefHeight="674.0" prefWidth="396.0" styleClass="porty-credits-textarea" text="In loving memory:&#10;Erik Daurer 01.09.2025 - 14.11.2025" />
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        </HBox>
    </VBox>
</VBox>
