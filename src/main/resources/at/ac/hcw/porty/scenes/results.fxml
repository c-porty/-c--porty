<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.ac.hcw.porty.controller.ResultsController"
      prefHeight="960.0" prefWidth="1184.0">
    <HBox>
        <VBox spacing="-8">
            <Label styleClass="porty-title-large" text="Scan result" />
            <Label fx:id="dateTimeLabel" styleClass="porty-results-subtitle" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_LEFT">
            <Button mnemonicParsing="false" onAction="#navigateBack" styleClass="porty-results-button-close">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../images/close-white.png" />
                    </ImageView>
                </graphic>
            </Button>
            <!--<Button mnemonicParsing="false" styleClass="" text="Download" />-->
        </HBox>
    </HBox>

    <Region prefHeight="32" />

    <StackPane>
        <Region fx:id="redBar" prefHeight="7" prefWidth="1024" styleClass="porty-risk-high" />
        <Region fx:id="greenBar" prefHeight="7" prefWidth="1024" styleClass="porty-risk-low" />
    </StackPane>

    <Region prefHeight="30" />

    <GridPane fx:id="resultGrid" styleClass="porty-result-text">
        <columnConstraints>
            <ColumnConstraints percentWidth="35" />
            <ColumnConstraints percentWidth="65" />
        </columnConstraints>
    </GridPane>
</VBox>
