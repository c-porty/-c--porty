<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox
    fx:id="root"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="at.ac.hcw.porty.controller.ResultsController"
    prefHeight="960.0" prefWidth="1184.0"
>
    <HBox>
        <VBox spacing="-8">
            <Label fx:id="resultTitle" styleClass="porty-title-large" text="%result.title" />
            <Label fx:id="dateTimeLabel" styleClass="porty-results-subtitle" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_LEFT">
            <Button fx:id="closeButton" styleClass="porty-results-button" mnemonicParsing="false" onAction="#navigateBack">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-close" styleClass="porty-results-button-icon"/>
                </graphic>
            </Button>
            <Button fx:id="exportButton"
                    styleClass="porty-results-button"
                    mnemonicParsing="false"
                    onAction="#exportPdf">
                <graphic>
                    <FontIcon iconLiteral="mdi2d-download"
                              styleClass="porty-results-button-icon"/>
                </graphic>
                <tooltip>
                    <Tooltip fx:id="exportToPDFTooltip" text="%tooltip.export-to-pdf" />
                </tooltip>
            </Button>

        </HBox>
    </HBox>

    <Region prefHeight="32" />

    <HBox>
        <Region fx:id="greenBar" prefHeight="7" styleClass="porty-risk-low" />
        <Region fx:id="redBar" prefHeight="7" HBox.hgrow="ALWAYS" styleClass="porty-risk-high" />
    </HBox>

    <Region prefHeight="30" />

    <GridPane fx:id="resultGrid" styleClass="porty-result-text">
        <columnConstraints>
            <ColumnConstraints percentWidth="35" />
            <ColumnConstraints percentWidth="65" />
        </columnConstraints>
    </GridPane>
</VBox>
